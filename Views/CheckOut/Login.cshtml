@{
    ViewData["Title"] = "Payment Failed";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 text-center p-5" style="max-width: 500px;">
        <div class="mb-4">
            <i class="bi bi-x-circle-fill text-danger" style="font-size: 5rem;"></i>
        </div>
        <h2 class="text-danger fw-bold">Payment Failed</h2>
        <p class="text-muted">Oops! Something went wrong with your payment. Please try again.</p>
        <a asp-action="Index" asp-controller="Home" class="btn btn-danger mt-3 px-4">Try Again</a>
    </div>
</div>
